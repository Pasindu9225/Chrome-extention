{
  "manifest_version": 3,
  "name": "Change Background Color",
  "version": "1.2",
  "description": "A Chrome extension to change the background color of a webpage and toggle dark/light mode.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
